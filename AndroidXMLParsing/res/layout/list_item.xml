<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#b8b5e7"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/variant1"
        android:orientation="vertical"
        android:baselineAligned="true">

        <!-- date Label -->

        <TextView
            android:id="@+id/listitem_textview_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingTop="6dip"
            android:text="date"
            android:textColor="@color/variant2"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Description label -->

        <TextView
            android:id="@+id/listitem_textview_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:text="description"
            android:textColor="@color/variant3"
            android:textSize="23dip"
            android:password="false"
           >
        </TextView>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listview_textview_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="link: "
                android:textColor="@color/variant3"
                android:textStyle="bold" >
            </TextView>
            <!-- link Label -->

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="hi"
                android:textColor="#13113e"
                android:textSize="15dip"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>